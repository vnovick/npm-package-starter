{
  "name": "stewie-editor",
  "version": "0.1.7",
  "description": "Stewie is a structured wysiwyg based on DraftJS and draftjs-plugin-editor",
  "main": "./lib/StewieEditor.js",
  "scripts": {
    "start": "npm run start-dev",
    "start-dev": "better-npm-run watch-client",
    "compile": "better-npm-run compile",
    "prepublish": "npm run deploy",
    "deploy": "NODE_ENV=production webpack --config ./src/build_config/webpack.config.js",
    "test": "better-npm-run compile-test",
    "test-full": "better-npm-run compile-test-full",
    "clean-install": "rm -rf node_modules && npm i"
  },
  "betterScripts": {
    "watch-client": {
      "command": "nodemon --watch ./src/build_config --delay 250ms --exec webpack-dev-server --progress --colors --config ./src/build_config/webpack.config.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "compile-test": {
      "command": "webpack --config ./src/build_config/webpack.config.js --progress --colors && mocha $(find src -name '*_test.js' ! -ipath '*node_modules*') --watch --recursive --reporter dot src/ --compilers js:babel-core/register",
      "env": {
        "NODE_ENV": "test",
        "BABEL_ENV": "test"
      }
    },
    "compile-test-full": {
      "command": "webpack --config ./src/build_config/webpack.config.js --progress --colors && mocha $(find src -name '*_test.js' ! -ipath '*node_modules*') --watch --recursive src/ --compilers js:babel-core/register",
      "env": {
        "NODE_ENV": "production",
        "BABEL_ENV": "test"
      }
    },
    "compile": {
      "command": "webpack --config ./src/build_config/webpack.config.js --profile",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FTBpro/stewie.git"
  },
  "keywords": [
    "react",
    "draftjs",
    "wysiwyg",
    "redux",
    "es6"
  ],
  "author": "Vladimir Novick",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FTBpro/stewie/issues"
  },
  "homepage": "https://github.com/FTBpro/stewie#readme",
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-polyfill": "^6.9.1",
    "better-npm-run": "0.0.8",
    "draft-js": "^0.7.0",
    "mocha-jsdom": "^1.1.0",
    "react": "^15.2.0",
    "react-autobind": "^1.0.6",
    "react-css-modules": "^3.7.7",
    "react-dom": "^15.2.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-saga": "^0.10.5",
    "save-dev": "^2.0.0",
    "uniqid": "^3.1.0",
    "webpack": "^1.13.1",
    "sass-loader": "^3.2.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-css-modules-transform": "^0.1.1",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "css-loader": "^0.23.1",
    "css-mqpacker": "^5.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "node-sass": "^3.7.0",
    "postcss": "^5.0.21",
    "postcss-loader": "^0.9.1",
    "postcss-map-url": "^1.0.2",
    "postcss-merge-idents": "^2.1.6",
    "postcss-merge-longhand": "^2.0.1",
    "postcss-merge-rules": "^2.0.9",
    "redux-logger": "^2.6.1",
    "decache": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.0",
    "enzyme": "^2.3.0",
    "eslint": "^2.12.0",
    "eslint-plugin-react": "^5.2.2",
    "expect": "^1.20.1",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "plop": "^1.5.0",
    "react-addons-test-utils": "^15.2.0",
    "redux-saga-test-plan": "0.0.2",
    "webpack-dev-server": "^1.14.1"
  }
}
